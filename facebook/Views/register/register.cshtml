@model facebook.ViewModels.UserViewModel
@{
    ViewBag.Title = "register";
}

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/register.css">
    <title>Creative Colorlib SignUp Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">
    <!-- //web font -->
</head>
<body>
    <!-- main -->
    <div class="main-w3layouts wrapper">
        <h1>Creative SignUp Form</h1>
        <div class="main-agileinfo">
            <div class="agileits-top">

                @using (Html.BeginForm("register", "register", FormMethod.Post))
                {<form>

                        @Html.TextBoxFor(model => model.emer, new { @class = "text", placeholder = "emer", Required = "" })
                        <br />
                        @Html.TextBoxFor(model => model.mbiemer, new { @class = "text", placeholder = "mbiemer", Required = "" })
                        <br />
                        @Html.TextBoxFor(model => model.email, new { @class = "text", placeholder = "email", Required = "" })
                        <br />
                        @Html.TextBoxFor(model => model.password, new { @class = "text", placeholder = "password", Required = "" })
                        <br />

                        <div class="wthree-text">
                                <label class="anim">
                                    <input type="checkbox" class="checkbox" required="">
                                    <span>I Agree To The Terms & Conditions</span>
                                </label>
                                <div class="clear"> </div>
                            </div>
                        <input type="submit" value="SIGNUP" name="button">
                    </form>

                }

                <p>Don't have an Account? <a href="@Url.Action("Index", "Home")"> Login Now!</a></p>
            </div>
        </div>

        <ul class="colorlib-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <!-- //main -->
</body>
</html>

